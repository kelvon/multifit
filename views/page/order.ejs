                            </li>
                            <li class="col-lg-4 col-md-4 col-sm-4 col-xs-4 pull-right">
                                <a href="" style="text-align:right; overflow: hidden;text-overflow: ellipsis; white-space: nowrap;" class="user-profile pull-right col-lg-8 col-md-8">
                                    <font  style="color: #FFF;"><%= JSON.parse(admin).fullname %> (Perfil)</font>
                                </a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
            <!-- /top navigation -->
            <!-- page content -->
            <div class="right_col" role="main">
                <div class="">
                        <div class="x_panel">
                            <div class="x_content">
                                <div class="x_title">
                                    <div class="row">
                                        <div class="col-md-2 col-sm-2 col-xs-2">
                                            <h2>Meus Pedidos</h2>
                                        </div>
                                        <div class="col-md-10 col-sm-10 col-xs-10">
                                            <a href="./order/register-order" class="btn pull-right" 
                                            style="color:#FFF; background-color:#006400;">
                                                <i class="fa fa-plus"></i>
                                            </a>
                                            <a href="./order/list-cancel-order" class="btn pull-right" 
                                            style="color:#FFF; background-color:#FF0000;">
                                                <i class="fa fa-trash"></i>
                                            </a>
                                            <a href="./order/list-accept-order" class="btn btn-info pull-right" 
                                            style="color:#FFF;">
                                                <i class="fa fa-check"></i>
                                                <span id="badges"></span>
                                            </a>
                                        </div>
                                    </div>
                                    <div class="clearfix"></div>
                                </div>
                                <div class="col-md-12 col-sm-12 col-xs-12">
                                    <div class="row">
                                        <% for(var i = 0; i < orders.length; i++){ %>
                                            <%
                                            var userInfo = [];
                                            var namePag  = 'Nenhuma Forma de Pagamento';
                                                                                    
                                            for(var j = 0; j < users.length; j++){
                                                if(orders[i].clienteId == users[j]._id){
                                                    userInfo = users[j];
                                                    break;
                                                }
                                            }

                                            if(formaspag != null){
                                                for(var k = 0; k < formaspag.length; k++){
                                                    if(orders[i].formaspagId == formaspag[k]._id){
                                                        namePag = formaspag[k].name;
                                                        break;
                                                    }
                                                }
                                            }
                                            %>
                                            <div class="col-md-3 col-sm-3 col-xs-6">
                                                <div class="col-md-12 col-sm-12 col-xs-12">
                                                    <div class="x_panel" style="margin-top:10px; padding:10px; border-radius:10px; height:150; 
                                                    background-color:#FF3; text-align:center">
                                                        <h4 id="userName" style="font-weight:bold"><%= userInfo.firstname+" "+userInfo.lastname %></h4>
                                                        <img class="circle-pic" src="/images/user.png" alt="" width="120" height="100">
                                                        <h5 id="userEndereco" style="color: #484848; font-weight:bold"><%= orders[i].date+" "+orders[i].hour %></h5>
                                                        <br />
                                                        
                                                        <% if(orders[i].timing != null){ %>
                                                            <h5 style="color: #484848; font-weight:bold"><%= "Tempo de Espera: "+orders[i].timing %></h5>
                                                        <% } %>

                                                        <% if(orders[i].situation == 'A'){ %>
                                                            <h5 style="color: #000; font-weight:bold">EM ANALISE</h5>
                                                        <% }else if(orders[i].situation == 'P'){ %>
                                                            <h5 style="color: #003689; font-weight:bold">EM PRODUÇÃO/VIAGEM</h5>
                                                        <% }else { %>
                                                            <h5 style="color: #008000; font-weight:bold">ENTREGUE</h5>
                                                        <% } %>

                                                        <h5 style="color: #006400; font-weight:bold"><%= namePag %></h5>
                                                        <% if(orders[i].status == 'S'){ %>
                                                            <h5 style="color: #666;">(PAGO)</h5>
                                                        <% }else{ %>
                                                            <h5 style="color: #666;">(NÃO PAGO)</h5>
                                                        <% } %>

                                                        <h5 style="color: #006400; font-weight:bold">R$ <%= order[i].priceTotal %></h5>
                                                        <div class="form-group">
                                                            <a href="./order/info-order/<%= orders[i]._id %>" class="btn btn-info"><i class="fa fa-edit"></i></a>
                                                            <a href="./order/cancel/<%= orders[i]._id %>" class="btn btn-danger"><i class="fa fa-trash"></i></a>
                                                            
                                                            <button type="button" class="btn btn-warning" data-toggle="modal" data-target="#addTiming<%= orders[i]._id %>">
                                                                <font style="color: #FFF;"><i class="fa fa-calendar"></i></font>
                                                            </button>

                                                            <div id="addTiming<%= orders[i]._id %>" class="modal modal-transparent fade" role="dialog" style="text-align:left;background-color:transparent; border:0">
                                                                <div class="modal-dialog">
                                                                    <div class="modal-content">
                                                                        <div class="modal-header">
                                                                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                                                                            <h4 class="StepTitle">Adicionar tempo de espera</h4/>
                                                                        </div>
                                                                        <div class="modal-body">
                                                                            <form id="demo-form2" data-parsley-validate
                                                                                class="form-horizontal form-label-left text-left" method="POST"
                                                                                action="./order/insert-timing/<%= orders[i]._id %>">
                                                                                
                                                                                <div class="row">
                                                                                    <div class="col-md-4 col-xs-12">
                                                                                        <label for="price_unit">Horas:</label> 
                                                                                        <input type="text" 
                                                                                        class="form-control" name="hour_timing"
                                                                                        placeholder="Ex.: 00" >
                                                                                    </div>
                                                                                    <div class="col-md-4 col-xs-12">
                                                                                        <label for="item_value">Minutos:</label> 
                                                                                            <input type="text" 
                                                                                            class="form-control" name="min_timing"
                                                                                            placeholder="Ex.: 00" >
                                                                                    </div>
                                                                                    <div class="col-md-4 col-xs-12">	
                                                                                        <label for="price_total">Segundos:</label> 
                                                                                            <input type="text" 
                                                                                            class="form-control" name="seconds_timing"
                                                                                            placeholder="Ex.: 00" >
                                                                                    </div>
                                                                                </div>
                            
                                                                                <br/>
                                                                                <div class="form-group">
                                                                                    <a class="btn btn-danger pull-right" data-dismiss="modal" >Cancelar</a>
                                                                                    <input type="submit" class="btn btn-info pull-right" value="Inserir" />
                                                                                </div>
                                                                            <br />
                                                                            </form>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>

                                                            <button type="button" class="btn" data-toggle="modal" data-target="#addItem<%= orders[i]._id %>" 
                                                                style="background-color: #006400;">
                                                                <font style="color: #FFF;"><i class="fa fa-plus"></i></font>
                                                            </button>

                                                            <div id="addItem<%= orders[i]._id %>" class="modal modal-transparent fade" role="dialog" style="text-align:left;background-color:transparent; border:0">
                                                                <div class="modal-dialog">
                                                                    <div class="modal-content">
                                                                        <div class="modal-header">
                                                                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                                                                            <h4 class="StepTitle">Adicionar item</h4/>
                                                                        </div>
                                                                        <div class="modal-body">
                                                                            <form id="demo-form2" data-parsley-validate
                                                                                class="form-horizontal form-label-left text-left" method="POST"
                                                                                action="./item/auth2/register/<%= orders[i]._id %>">
                                                                                
                                                                                <div class="form-group">
                                                                                    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">Categoria:</label>
                                                                                    <div class="col-md-9 col-sm-9 col-xs-12">
                                                                                        <select id="selectpicker" class="category form-control" 
                                                                                            name="categoryID" data-live-search="true" onchange="getProducts(this.value)">
                                                                                        </select>
                                                                                    </div>
                                                                                    <br /><br />
                                                                                </div>
                                        
                                                                                <div class="form-group">
                                                                                    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">Produto:</label>
                                                                                    <div class="col-md-9 col-sm-9 col-xs-12">
                                                                                        <select id="selectpicker" class="product form-control" 
                                                                                        onblur="setInfoProduct(this.value)" name="productID" data-live-search="true">
                                                                                        </select>
                                                                                    </div>
                                                                                    <br /><br />
                                                                                </div>

                                                                                <div class="row">
                                                                                    <div class="col-md-3 col-xs-12">
                                                                                        <label for="price_unit">Valor Un.:</label> 
                                                                                        <input type="text" id="priceUnit"
                                                                                        class="form-control" name="price_unit"
                                                                                        onBlur="setTotalValue(this.value);"
                                                                                        placeholder="Ex.: R$ 100,00" >
                                                                                    </div>
                                                                                    <div class="col-md-3 col-xs-12">
                                                                                        <label for="item_value">QTDE:</label> 
                                                                                            <input type="text" id="itemValue"
                                                                                            class="form-control" name="item_value"
                                                                                            onBlur="setTotal(this.value);"
                                                                                            placeholder="Ex.: 100" >
                                                                                    </div>
                                                                                    <div class="col-md-3 col-xs-12">	
                                                                                        <label for="descont">Desconto:</label> 
                                                                                            <input type="text" id="priceDescont"
                                                                                            class="form-control" name="descont"
                                                                                            onBlur="setTotalDescont(this.value);"
                                                                                            placeholder="Ex.: 5" >
                                                                                    </div>
                                                                                    <div class="col-md-3 col-xs-12">	
                                                                                        <label for="price_total">Total:</label> 
                                                                                            <input type="text" id="priceTotal"
                                                                                            class="form-control" name="price_total"
                                                                                            placeholder="Ex.: R$ 100,00" readonly >
                                                                                    </div>
                                                                                </div>
                            
                                                                                <br/>
                                                                                <div class="form-group">
                                                                                    <a class="btn btn-danger pull-right" data-dismiss="modal" >Cancelar</a>
                                                                                    <input type="submit" class="btn btn-info pull-right" value="Adicionar" />
                                                                                </div>
                                                                            <br />
                                                                            </form>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#finalize<%= orders[i]._id %>">
                                                                <font style="color: #FFF;"><i class="fa fa-check"></i></font>
                                                            </button>

                                                            <div id="finalize<%= orders[i]._id %>" class="modal modal-transparent fade" role="dialog" style="text-align:left;background-color:transparent; border:0">
                                                                <div class="modal-dialog">
                                                                    <div class="modal-content">
                                                                        <div class="modal-header">
                                                                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                                                                            <h4 class="StepTitle">Finalizar pedido</h4/>
                                                                        </div>
                                                                        <div class="modal-body">

                                                                            <% if(namePag != 'Nenhuma Forma de Pagamento'){ %>
                                                                                <div class="form-group">
                                                                                    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">Forma de Pagamento:</label>
                                                                                    <div class="col-md-9 col-sm-9 col-xs-12">
                                                                                        <input class="form-control"  name="productID" 
                                                                                           value="<%= namePag %>" />
                                                                                        </select>
                                                                                    </div>
                                                                                    <br /><br />
                                                                                </div>

                                                                                <br/>
                                                                                <div class="form-group">
                                                                                    <a class="btn btn-danger pull-right" data-dismiss="modal" >Cancelar</a>
                                                                                    <a href="./order/finalize/<%= orders[i]._id %>" class="btn btn-primary pull-right">Finalizar</a>
                                                                                </div>
                                                                                <br />
                                                                            <% }else{ %>
                                                                                <form id="demo-form2" data-parsley-validate
                                                                                    class="form-horizontal form-label-left text-left" method="POST"
                                                                                    action="./order/finalize2/<%= orders[i]._id %>">

                                                                                    <div class="form-group">
                                                                                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">Formas de Pagamento:</label>
                                                                                        <div class="col-md-9 col-sm-9 col-xs-12">
                                                                                            <select id="selectpicker" class="formaspag form-control" 
                                                                                            name="formapagID" data-live-search="true">
                                                                                            </select>
                                                                                        </div>
                                                                                        <br /><br />
                                                                                    </div>

                                                                                    <div class="form-group">
                                                                                        <a class="btn btn-danger pull-right" data-dismiss="modal" >Cancelar</a>
                                                                                        <input type="submit" class="btn btn-primary pull-right" value="Finalizar" />
                                                                                    </div>
                                                                                </form>
                                                                            <% } %>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        <% } %>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <br />
    <footer class="navbar navbar-default navbar-fixed-bottom">
        <br />
        <% include ../partials/footer %>
    </footer>

    <script src="/js/jquery.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>
    <script src="/js/custom.min.js"></script>
    <script src="/js/jquery-1.7.2.min.js"></script>
    <script src="/js/scriptItem.js"></script>
    <script src="/js/scriptOrder2.js"></script>
    <script type="text/javascript" src="/socket.io/socket.io.js"></script>
    <script src="/js/push.min.js"></script>
    <script type="text/javascript">
        var socket = io();
        socket.on('order',function(data){
            console.log(data);
            getCountOrder();

            Push.create('Pedidos', { 
                body : 'Você tem novos pedidos',
                timeout: 5000,
                onClick: function(){
                    console.log('Clicked');
                }
            });
        });

        function getCountOrder(){
            $.ajax({
                type: 'GET',
                url:  'http://192.168.1.4:1234/order/getAcceptOrder',
                success: function(result){
                    var dados = result.count;
                    var count = dados;
                    
                    if(count > 0){

                        var y = document.getElementById("badges");
                        y.className = "badge";

                        var y2 = document.getElementById("badges2");
                        y2.className = "badge";
                        
                        $("#badges").empty();
                        $("#badges").append(count);

                        $("#badges2").empty();
                        $("#badges2").append(count);

                    }else{
                        var y = document.getElementById("badges");
                        y.className = "";

                        var y2 = document.getElementById("badges2");
                        y2.className = "";
                        
                        $("#badges2").empty();
                    }
                    
                }
            });
        }
    </script>
</body>
</html>