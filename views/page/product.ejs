                                                    <div class="form-group">
                                                        <a href="./products/edit-product/<%= products[i]._id %>" class="btn btn-info"><i class="fa fa-edit"></i></a>
                                                        <a href="./products/delete/<%= products[i]._id %>" class="btn btn-danger"><i class="fa fa-trash"></i></a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <% } %>
                                    </div>
                                </div>
                            </div>
                        </div>
